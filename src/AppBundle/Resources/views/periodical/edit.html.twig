{% extends 'base.html.twig' %}

{% block title %}Periodical Edit{% endblock %}

{% block body %}
    <h1>Periodical edit</h1>

    {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
    <div class="form-group">
        <div class="col-sm-2"></div>

        <div class='btn-toolbar pull-left'>
            <div class='btn-group'>
                <input type="submit" value="Update" class="btn btn-primary" />
                <a href="{{ path('periodical_show', { 'id': periodical.id }) }}" class="btn btn-warning">Cancel</a>
            </div>
        </div>

        <div class='btn-toolbar pull-right'>
            <div class='btn-group'>
                <a href="{{ path('periodical_show_contributions', { 'id': periodical.id }) }}" class="btn btn-primary"><span class="glyphicon glyphicon-edit"></span> Contributions</a>
                <a href="{{ path('place_new_popup') }}" class="btn btn-primary popup" id="newPlace"><span class="glyphicon glyphicon-plus"></span> Place</a>
                <a href="{{ path('person_new_popup') }}" class="btn btn-primary popup" id="newPlace"><span class="glyphicon glyphicon-plus"></span> Person</a>
                <a href="{{ path('publisher_new_popup') }}" class="btn btn-primary popup" id="newPublisher"><span class="glyphicon glyphicon-plus"></span> Publisher</a>
            </div>
        </div>
    </div>
    {{ form_end(edit_form) }}

{% endblock %}

{% block styles %}
    <link href="{{ asset('bower/select2/dist/css/select2.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bower/select2-bootstrap-css/select2-bootstrap.min.css') }}" rel="stylesheet">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bower/select2/dist/js/select2.full.min.js') }}"></script>
    <script src="{{ asset('bundles/tetranzselect2entity/js/select2entity.js') }}"></script>
    <script src="{{ asset('bower/symfony-collection/jquery.collection.js') }}"></script>
    {% include 'NinesEditorBundle:editor:widget.html.twig' %}
{% endblock %}
